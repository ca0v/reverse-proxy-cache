{
  "exclude": ["./bin"],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "target": "ES2020",
    "module": "ES2020",
    "sourceMap": false,
    "outDir": "./bin",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "#@app/*": ["./*"]
    },
    "skipLibCheck": true
  }
}
